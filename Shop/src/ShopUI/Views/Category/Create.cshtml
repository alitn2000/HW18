<div class="container px-5 my-5">
    <form method="post" asp-action ="CreateCat" id="contactForm" data-sb-form-api-token="API_TOKEN">
        <div class="form-floating mb-3">
            <input class="form-control" name="catName" id="newCategory" type="text" placeholder="New Category" data-sb-validations="required" />
            <label for="newCategory">New Category</label>
            <div class="invalid-feedback" data-sb-feedback="newCategory:required">New Category is required.</div>
        </div>

        <div class="d-none" id="submitErrorMessage">
            <div class="text-center text-danger mb-3">Error sending message!</div>
        </div>
        <div class="d-grid">
            <button class="btn btn-primary btn-lg " id="submitButton" type="submit">Submit</button>
        </div>
    </form>
</div>
<script src="https://cdn.startbootstrap.com/sb-forms-latest.js"></script>